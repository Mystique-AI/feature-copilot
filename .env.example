# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=feature_dashboard

# Backend Configuration
DATABASE_URL=postgresql://postgres:your_secure_password_here@db:5432/feature_dashboard
SECRET_KEY=your_secret_key_change_this_to_a_long_random_string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Configuration
# The AI provider is AUTO-DETECTED based on which API key is provided:
# - If OPENAI_API_KEY is set → uses OpenAI
# - If GENAI_API_KEY is set → uses Google GenAI  
# - If both are set → prefers OpenAI

# API Keys (set ONE or BOTH)
OPENAI_API_KEY=
GENAI_API_KEY=

# Optional: Custom chat model names
OPENAI_MODEL_LOW=gpt-4o-mini
OPENAI_MODEL_MEDIUM=gpt-4o
OPENAI_MODEL_HIGH=gpt-4o

# Embedding model configuration
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
GENAI_EMBEDDING_MODEL=models/gemini-embedding-001
EMBEDDING_DIMENSIONS=1024

# Admin Configuration
# Comma-separated list of admin emails who can grant APPROVER role
ADMIN_EMAILS=

# Frontend Configuration
VITE_API_URL=/api
